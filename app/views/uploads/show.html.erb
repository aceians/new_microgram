<h1 style="text-align:center">This Submission</h1>

<br>



    <div class="col-sm-5 submission_card" style="height:160px; width:160px">
      <% @upload.images.all.each do |a| %>
      <%= image_tag a.image(:small) %>
    </div>
      <% end %>
    <br>
    <br>
    <h4 style="color:blue"> Created by : <%= @upload.user.name %> (<%= @upload.user.email %> )  </h4>
    <h4> Permission : <%= @upload.permission %></h4>
    <br>


          <ul>
          <% @upload.tags.all.each do |b| %>
              <li class="tags"> # <%= link_to b.tagname, uploads_search_path(b.tagname), method: :post %></li>
          <% end %>
          </ul>          

		  <h4> Description : <%= @upload.description %> </h4>
		  <br><br>
		  <% if current_user == @upload.user %>
		  <h4>	<%= link_to "Edit", edit_upload_path(@upload) %></h4>
		  <% end %>




